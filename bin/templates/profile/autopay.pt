<div metal:use-macro="view.layout">
 <div metal:fill-slot="content">
        <article>            <!-- box begin --> <!-- use -->
            <div class="box">
              <div class="border-top">
                <div class="border-right">
                  <div class="border-bot">
                    <div class="border-left">
                      <div class="left-top-corner">
                        <div class="right-top-corner">
                          <div class="right-bot-corner">
                            <div class="left-bot-corner">
                              <div class="inner">
                                <h2>Auto Pay</h2>
                                <ul class="list1">
                                  <li><b>Account ID   :</b> ${accountid} </li>
                                  <li><b>Balance      :</b> ${balance} </li>
                                  <form method="post">

                                    <input type="hidden" name="myaccount"
                                           value="${accountid}"/>
                                    <input type="hidden" name="mybalance"
                                            value="${balance}"/>
                                  <li>
                                       Account Number :
                                       <input type="text" name="tranferaccount" placeholder="please Enter Acc.Number">
                                  </li>
                                  <li>
                                       Money Pay :
                                       <input type="text" name="money" placeholder="$.00">
                                  </li>
                                  <li>
                                       Period :<em>
                                       <input type="text" name="money" placeholder="day">&nbsp&nbsp<input type="text" name="money" placeholder="month">&nbsp&nbsp<input type="text" name="money" placeholder="year">
                                  </em></li>
                                  <li>
                                      <input type="submit" class="button2" name="transfer.submitted" value="Submit">
                                  </li>
                                  </form>
                                </ul>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
           </div>
        </article>

        <article>            <!-- box begin --> <!-- use -->
         <div class="box">
           <div class="border-top">
             <div class="border-right">
               <div class="border-bot">
                 <div class="border-left">
                   <div class="left-top-corner">
                     <div class="right-top-corner">
                       <div class="right-bot-corner">
                         <div class="left-bot-corner">
                           <div class="inner">
                             <h2>Transactions</h2>
                             <table border="1" align="center" width="90%" cellpadding="10"  bordercolor="black">
                               <tr align="center">
                                 <th>Date Time</th>
                                 <th>Type</th>
                                 <th>Money</th>
                                 <th>Balance</th>
                                 <th>Detail</th>
                               </tr>
                             </table>
                          </div>
                         </div>
                       </div>
                     </div>
                   </div>
                 </div>
               </div>
             </div>
           </div>
         </div>
       </article>          <!-- box end --> <!-- not use -->
</div>
</div>
